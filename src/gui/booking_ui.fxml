<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="10.0" minHeight="400.0" minWidth="400.0" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cafe.controller.BookingController">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <children>
      <Label text="Customer:" />
      <Label fx:id="nameLabel" text=" " GridPane.columnIndex="1" />
      <Label text="Number of guests:" GridPane.rowIndex="3" />
      <Separator prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
      <Label text="Booking date:" GridPane.rowIndex="4" />
      <Label text="Time:" GridPane.rowIndex="5" />
      <Label text="Choose table:" GridPane.rowIndex="6" />
      <Separator prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="7" />
      <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirmAction" text="Confirm" GridPane.rowIndex="8" />
      <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitAction" text="Exit" GridPane.columnIndex="1" GridPane.rowIndex="8" />
      <ComboBox fx:id="guestsBox" minWidth="110.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <ComboBox fx:id="dateBox" minWidth="110.0" onAction="#dateChanged" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <ComboBox fx:id="timeBox" minWidth="110.0" onAction="#timeChanged" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <ComboBox fx:id="tablesBox" minWidth="110.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   </children>
</GridPane>
