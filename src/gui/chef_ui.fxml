<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ChefController">
   <center>
      <TabPane>
         <tabs>
            <Tab closable="false" text="Current Orders">
               <content>
                  <AnchorPane>
                     <children>
                        <HBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="50.0">
                           <children>
                              <TableView fx:id="currentOrderTable" onMouseClicked="#selectOrder" prefHeight="470.0" prefWidth="294.0">
                                <columns>
                                  <TableColumn fx:id="currentOrderNo" prefWidth="75.0" text="C1" />
                                  <TableColumn fx:id="currentOrderDate" prefWidth="75.0" text="C2" />
                                </columns>
                              </TableView>
                              <VBox spacing="15.0">
                                 <children>
                                    <Label text="Label" />
                                    <TableView fx:id="currentItemTable" prefHeight="224.0" prefWidth="292.0">
                                      <columns>
                                        <TableColumn fx:id="currentOrderItem" prefWidth="75.0" text="C1" />
                                        <TableColumn prefWidth="75.0" text="C2" />
                                      </columns>
                                    </TableView>
                                    <Button mnemonicParsing="false" onAction="#confirmCooked" text="Button" />
                                 </children>
                                 <padding>
                                    <Insets top="10.0" />
                                 </padding>
                              </VBox>
                           </children>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </HBox>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   <top>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#logoutPushed" text="Logout" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
